<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_background_color"
    tools:context=".MobileSendSmsActivity2">
    <TextView
        android:id="@+id/SMSheadtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send SMS in Receiver"
        android:layout_marginLeft="40dp"
        android:layout_marginBottom="70dp"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="@color/white" />

    <EditText
        android:id="@+id/SMSnumber"
        android:layout_width="match_parent"
        android:layout_below="@id/SMSheadtext"
        android:layout_height="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/input_button"
        android:hint="Enter the number"
        android:padding="10dp"
        android:textColor="#120202"
        android:textColorHint="@color/white" />
    <EditText
        android:id="@+id/SMStext"
        android:layout_width="match_parent"
        android:layout_below="@id/SMSnumber"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/input_button"
        android:hint="Enter the text"
        android:inputType="textImeMultiLine"
        android:lines="5"
        android:padding="10dp"
        android:textColor="#120202"
        android:textColorHint="@color/white" />
    <Button
        android:id="@+id/SMSbtn"
        android:text="Send SMS"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_below="@id/SMStext"
        android:background="@drawable/btn_bckground"
        android:shadowColor="#A8A8A8"
        android:layout_marginLeft="50dp"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:layout_marginBottom="5dp"
        />

</RelativeLayout>