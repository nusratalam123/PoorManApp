<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_background_color"
    tools:context=".AfterSendingStoredInformationActivity2">

    <TextView
        android:id="@+id/afterStoredText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="After sending Stored Information for sender and receiver"
        android:layout_margin="10dp"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="@color/white"></TextView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/afterStoredrecycleview"
        android:layout_below="@+id/afterStoredText"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></androidx.recyclerview.widget.RecyclerView>

</RelativeLayout>