<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_background_color"
    tools:context=".RegisterPageActivity2">

    <TextView
        android:id="@+id/register_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Register page"
        />
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/register_logo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginLeft="80dp"
        android:layout_below="@id/register_head"
        android:layout_marginBottom="10dp"
        android:src="@drawable/android_image" />

    <EditText
        android:id="@+id/res_name"
        android:layout_width="match_parent"
        android:layout_below="@id/register_logo"
        android:layout_height="57dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/input_button"
        android:hint="Name"
        android:padding="10dp"
        android:textColor="#120202"
        android:textColorHint="@color/white" />


    <EditText
        android:id="@+id/res_phonenumber"
        android:layout_width="match_parent"
        android:layout_below="@id/res_name"
        android:layout_height="57dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/input_button"
        android:hint="Phone Number"
        android:padding="10dp"
        android:textColor="#120202"
        android:textColorHint="@color/white" />
    <EditText
        android:id="@+id/res_national_id"
        android:layout_width="match_parent"
        android:layout_below="@id/res_phonenumber"
        android:layout_height="57dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/input_button"
        android:hint="National Id"
        android:padding="10dp"
        android:textColor="#120202"
        android:textColorHint="@color/white" />
    <EditText
        android:id="@+id/res_bkash_number"
        android:inputType="numberPassword"
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:layout_below="@id/res_national_id"
        android:hint="Bkash number"
        android:textColorHint="@color/white"
        android:padding="10dp"
        android:textColor="#120202"
        android:background="@drawable/input_button"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        />


    <EditText
        android:id="@+id/res_password"
        android:inputType="numberPassword"
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:layout_below="@id/res_bkash_number"
        android:hint="Password"
        android:textColorHint="@color/white"
        android:padding="10dp"
        android:textColor="#120202"
        android:background="@drawable/input_button"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        />
    <EditText
        android:id="@+id/res_repassword"
        android:inputType="numberPassword"
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:layout_below="@id/res_password"
        android:hint="Password"
        android:textColorHint="@color/white"
        android:padding="10dp"
        android:textColor="#120202"
        android:background="@drawable/input_button"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        />

    <Button
        android:id="@+id/res_btn"
        android:text="register"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_below="@id/res_repassword"
        android:background="@drawable/btn_bckground"
        android:shadowColor="#A8A8A8"
        android:layout_marginLeft="50dp"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:layout_marginBottom="20dp"
        />
