<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_background_color"
    tools:context=".DonarRegistrationActivity2">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/register_logo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="110dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/android_image" />
    <TextView
        android:id="@+id/register_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/register_logo"
        android:text="Donar Registation"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        />
    <EditText
        android:id="@+id/donarname"
        android:layout_width="match_parent"
        android:layout_below="@id/register_head"
        android:layout_height="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/input_button"
        android:hint="Name Or Company name"
        android:padding="10dp"
        android:textColor="#120202"
        android:textColorHint="@color/white" />


    <EditText
        android:id="@+id/donarmail"
        android:layout_width="match_parent"
        android:layout_below="@id/donarname"
        android:layout_height="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/input_button"
        android:hint="Email Or Company Email"
        android:padding="10dp"
        android:textColor="#120202"
        android:textColorHint="@color/white" />
    <EditText
        android:id="@+id/donarnumber"
        android:layout_width="match_parent"
        android:layout_below="@id/donarmail"
        android:layout_height="47dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/input_button"
        android:hint="Mobile or Company number"
        android:padding="10dp"
        android:textColor="#120202"
        android:textColorHint="@color/white" />

    <EditText
        android:id="@+id/donarpassword"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/donarnumber"
        android:hint="Password"
        android:textColorHint="@color/white"
        android:padding="10dp"
        android:textColor="#120202"
        android:background="@drawable/input_button"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        />
    <EditText
        android:id="@+id/donarconpassword"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/donarpassword"
        android:hint="Confirm Password"
        android:textColorHint="@color/white"
        android:padding="10dp"
        android:textColor="#120202"
        android:background="@drawable/input_button"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        />

    <Button
        android:id="@+id/donarregbtn"
        android:text="register"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_below="@id/donarconpassword"
        android:background="@drawable/btn_bckground"
        android:shadowColor="#A8A8A8"
        android:layout_marginLeft="50dp"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:layout_marginBottom="5dp"
        />
    <LinearLayout
        android:id="@+id/linear_layout_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/donarregbtn"
        android:layout_marginTop="10dp"
        >
        <TextView
            android:id="@+id/reg_login_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Do have an Account?"
            android:layout_marginLeft="40dp"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/white" />
        <TextView
            android:id="@+id/donar_reg_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login"
            android:textSize="17sp"
            android:textStyle="bold"
            android:textColor="@color/white" />
    </LinearLayout>
</RelativeLayout>