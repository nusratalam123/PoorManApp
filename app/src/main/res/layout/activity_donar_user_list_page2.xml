<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_background_color"
    tools:context=".DonarUserListPageActivity2">


    <TextView
        android:id="@+id/donarLogiTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" Donar login info"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:textAlignment="center"
        ></TextView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/donarLoginCard"
        android:layout_below="@id/donarLogiTitle"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </androidx.recyclerview.widget.RecyclerView>

</RelativeLayout>